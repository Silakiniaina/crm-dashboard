<%- include('partials/header') %>
<link rel="stylesheet" href="/css/details.css">
<%- include('partials/navbar') %>

<main class="container mt-5">
    <h1 class="mb-4">Update Expense Amount</h1>
    <section class="details card p-4 shadow-sm">
        <form method="post" action="/expenses/expense-update-details">
            <input type="hidden" name="id" value="<%= expenseId %>">
            <div class="mb-3">
                <label for="amount" class="form-label">Amount (Ar):</label>
                <input type="number" id="amount" name="amount" class="form-control" value="<%= amount %>" step="0.01" required>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/data-total/details?type=<%= type %>" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </section>
</main>

<%- include('partials/footer') %>