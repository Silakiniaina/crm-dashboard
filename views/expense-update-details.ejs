<%- include('partials/header') %>
<link rel="stylesheet" href="/css/details.css">
<%- include('partials/navbar') %>

<main>
    <h1>Update Expense Amount</h1>
    <section class="details">
        <form method="post" action="/expenses/expense-update-details">
            <input type="hidden" name="id" value="<%= expenseId %>">
            <div class="form-group">
                <label for="amount">Amount (Ar):</label>
                <input type="number" id="amount" name="amount" class="form-control" value="<%= amount %>" step="0.01" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/data-total/details?type=<%= type %>" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </section>
</main>

<%- include('partials/footer') %>