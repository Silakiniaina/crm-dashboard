<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="container mt-5">
    <h1 class="mb-4">Update Budget Alert Threshold</h1>
    <section class="details card p-4 shadow-sm">
        <form method="post" action="/threshold">
            <input type="hidden" name="id" value="<%= thresholdId %>">
            <div class="mb-3">
                <label for="threshold" class="form-label">Threshold (%):</label>
                <input type="number" id="threshold" name="threshold" class="form-control" value="<%= threshold %>" step="0.01" min="0" max="100" required>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </section>
</main>

<%- include('partials/footer') %>